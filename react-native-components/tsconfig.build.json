{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "outDir": "./lib",
  },
  "include": ["src/components"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
